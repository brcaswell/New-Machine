{
  "builders": [
    {
      "communicator": "winrm",
      "cpus": 4,
      "disk_size": "{{user `disk_size`}}",
      "enable_virtualization_extensions": true,
      "floppy_files": [
        "Windows-10-Pro/autounattend.xml",
        "Enable-PSRemoting.ps1"
      ],
      "generation": 1,
      "headless": true,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "memory": 8192,
      "shutdown_command": "shutdown /s /t 0 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "type": "hyperv-iso",
      "winrm_password": "{{user `password`}}",
      "winrm_timeout": "12h",
      "winrm_username": "{{user `username`}}"
    }
  ],
  "post-processors": [
    {
      "output": "{{.BuildName}}.box",
      "type": "vagrant",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "Install-Chocolatey.ps1",
        "Install-Boxstarter.ps1",
        "Install-Common.ps1"
      ],
      "type": "powershell"
    },
    {
      "type": "windows-restart"
    },
    {
      "scripts": [
        "./.github-actions/images/win/scripts/Installers/Finalize-VM.ps1"
      ],
      "type": "powershell"
    }
  ],
  "variables": {
    "disk_size": "204800",
    "headless": "true",
    "iso_checksum": "24E59806398203BFDCD17520F30D94CCF53917FF24C3584AA1E748920038A9C4",
    "iso_checksum_type": "sha256",
    "iso_url": "en_windows_10_consumer_editions_version_2004_x64_dvd_8d28c5d7.iso",
    "password": "vagrant",
    "username": "vagrant"
  }
}

